function wisski_salz_map_namespaces($namespace) {

  $maps = array();
  $hook = 'wisski_map_namespaces';
  foreach (module_implements($hook) as $module) {
    $map = module_invoke($module,$hook,$namespace);
    if (!empty($map)) $maps[$module] = $map;
  }
//  dpm(array('namespace'=>$namespace,'maps'=>$maps));
  return $maps;
}

function wisski_salz_ensure_long_namespace($uri) {

//dpm(func_get_args(),__METHOD__);
  $matches = array();
  if (preg_match('/^(\w+?):([\w\-]+)$/u',$uri,$matches)) {
    $ns = $matches[1];
    $map = wisski_salz_map_namespaces($ns);
    if (!empty($map)) {
      $map = current($map);
      return '<'.$map['long'].$matches[2].'>';
    } else {
      trigger_error("Unknown namespace '$ns'",E_USER_WARNING);
      return $uri;
    }
  } else {
    //possibly we already got a long namespace
    $matches = array();
    if (preg_match('/^<?(.+[\/\#])([\w\-]+)>?$/u',$uri,$matches)) {
      return '<'.$matches[1].$matches[2].'>';
    } else {
      trigger_error('Invalid URI '.$uri,E_USER_ERROR);
      return FALSE;
    }
  }
}

function wisski_salz_ensure_short_namespace($uri) {
  
  $matches = array();
  if (preg_match('/^<?(.+[\/\#])([\w\-]+)>?$/u',$uri,$matches)) {
//dpm(func_get_args()+array('matches'=>$matches),__METHOD__);
    $ns = $matches[1];
    $map = wisski_salz_map_namespaces($ns);
    if (!empty($map)) {
//dpm(func_get_args()+array('matches'=>$matches,'map'=>$map),__METHOD__);
      $map = current($map);
      return $map['short'].':'.$matches[2];
    } else {
      trigger_error("Unknown namespace '$ns'",E_USER_WARNING);
      return '<'.$ns.$matches[2].'>';
    }
  } else {
    //possibly we already got a short namespace
    if (preg_match('/^(\w+?):([\w\-]+)$/u',$uri)) {
      return $uri;
    } else {
      trigger_error('Invalid URI '.$uri,E_USER_ERROR);
      return FALSE;
    }
  }
}

