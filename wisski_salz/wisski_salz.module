function wisski_salz_sparql_query($query_string,$dump = TRUE) {
  
  $store = wisski_salz_invoke_local_store();
  if ($store->getType() == "SPARQL 1.1") {
    list($ok,$result) = $store->querySPARQL($query_string);
    if ($ok) {
      if ($dump) {
        if (empty($result)) drupal_set_message('no triples match your query');
        else drupal_set_message($result->dump());
      }
      return $result;
    }
  }
  return FALSE;
}

function wisski_salz_all_triples($uri,$dump = TRUE) {

  $store = wisski_salz_invoke_local_store();
  if ($store->getType() == "SPARQL 1.1") {
    // $result will be FALSE on failure
    // otherwise it will be an easyrdf graph object that contains the triples
    $result = $store->getAllTriplesForURI($uri);
    if ($dump) {
      if ($result === FALSE) drupal_set_message('ERROR');
      elseif (empty($result)) drupal_set_message('no triples found');
      else drupal_set_message($result->dump());
    } else {
      return $result;
    }
  }
  return FALSE;
}

function wisski_salz_sparql_update($update_string) {

  $store = wisski_salz_invoke_local_store();
  if ($store->getType() == "SPARQL 1.1") {
    list($ok,$result) = $store->updateSPARQL($update_string);
    return $ok;
  }
  return FALSE;
}

function wisski_salz_pb_query($individual_uri,$starting_concept,$path_array,$datatype_property,$single_result = FALSE) {
  
  $store = wisski_salz_invoke_local_store();
  if ($store->getType() == "SPARQL 1.1") {
    if (is_array($individual_uri)) {
      return $store->pbMultiQuery($individual_uri,$starting_concept,$path_array,$datatype_property,$single_result);
    } else {
      return $store->pbQuerySingle($individual_uri,$starting_concept,$path_array,$datatype_property);
    }
  }
  return array();
}

